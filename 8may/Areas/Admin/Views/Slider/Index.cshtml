@model List<Slider>
@{
    int counter = 1;
}
<div class="container">
    <div class="row">
        <div class="col-3 mb-3">
            <a asp-action="Create" class="btn btn-outline-primary">Create Slider</a>
        </div>
        <div class="col-12">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Percent</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">RedirectUrl</th>
                        <th scope="col">ImageUrl</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td>@item.Id</td>
                            <td>@item.Percent</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.RedirectUrl</td>
                            <td><img src="~/uploads/sliders/@item.ImageUrl" alt="ImageUrl" /></td>
                            <td><a asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            <td><a asp-action="Update" asp-controller="Slider" asp-route-id2="@item.Id" class="btn btn-outline-info">Update</a></td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>